# Agent Orchestrator Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM Configuration
# ============================================================================

# Ollama
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_INTENT_MODEL=llama3.1:8b
OLLAMA_CHAT_MODEL=llama3.1:8b

# Model Provider: ollama | anthropic | openai
MODEL_PROVIDER=ollama

# For other providers (if not using Ollama)
MODEL_BASE_URL=
MODEL_API_KEY=

# Anthropic (if using Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_VERSION=2023-06-01

# ============================================================================
# Intent Extraction Configuration
# ============================================================================

INTENT_MODEL_NAME=
INTENT_MODEL_TIMEOUT_SECONDS=25
INTENT_MODEL_MAX_RETRIES=2

# ============================================================================
# Orchestrator Configuration
# ============================================================================

ORCHESTRATOR_CLARIFICATION_MODEL=
ORCHESTRATOR_CLARIFICATION_TIMEOUT_SECONDS=12
ORCHESTRATOR_CLARIFICATION_MAX_RETRIES=1
ORCHESTRATOR_TEST_MODE=false

# Confidence thresholds
SOFT_CONFIRMATION_ENABLED=true
SOFT_CONFIRM_THRESHOLD=0.94
ORCHESTRATOR_CONFIDENCE_THRESHOLD=0.94

# ============================================================================
# Planning Configuration
# ============================================================================

PLANNER_FUNCTION_CALLING_ENABLED=false
PLANNER_FUNCTION_CHOICE_MODE=auto
PLANNER_MAX_ITERATIONS=2
PLANNER_MODEL=llama3.1:8b
PLANNER_TIMEOUT_SECONDS=20

PLANNER_INCLUDED_DOMAINS=
PLANNER_EXCLUDED_DOMAINS=
PLANNER_INCLUDED_CAPABILITIES=
PLANNER_EXCLUDED_CAPABILITIES=

# Memory integration with planner
PLANNER_MEMORY_ENABLED=true
PLANNER_MEMORY_PARAM_MAP_JSON=
PLANNER_MEMORY_ALLOW_WITHOUT_SCHEMA=false

# ============================================================================
# Database and Storage
# ============================================================================

DB_PATH=agent.db
REGISTRY_DB_PATH=registry.db
MEMORY_DB_PATH=memory.db

MEMORY_BOOTSTRAP_JSON=
BOOTSTRAP_DOMAINS_JSON=
BOOTSTRAP_DOMAINS_FILE=domains.bootstrap.json

AUTO_SYNC_REMOTE_CAPABILITIES=true
SEED_CORE_DEFAULTS=true

# ============================================================================
# MCP Configuration
# ============================================================================

MCP_URL=http://host.docker.internal:8000/sse
MCP_ADAPTER_CALL_TIMEOUT_SECONDS=90

# ============================================================================
# Telegram Configuration
# ============================================================================

# Bot Token and Chat
TELEGRAM_BOT_TOKEN=
TELEGRAM_DEFAULT_CHAT_ID=
TELEGRAM_TIMEOUT_SECONDS=10

# Entry Channel
TELEGRAM_ENTRY_POLL_TIMEOUT_SECONDS=20
TELEGRAM_ENTRY_REQUEST_TIMEOUT_SECONDS=35
TELEGRAM_ENTRY_ALLOWED_CHAT_IDS=
TELEGRAM_ENTRY_DEBUG=true
TELEGRAM_ENTRY_DEBUG_MAX_CHARS=3200

# Dry run for communication domain
TELEGRAM_DRY_RUN=true

# ============================================================================
# OpenAI-Compatible API Configuration (for Open WebUI)
# ============================================================================

OPENAI_API_BASE_URL=http://agent-api:8010/v1
OPENAI_API_KEY=sk-local-dev

OPENAI_API_DEBUG_TRACE=false
OPENAI_API_INCLUDE_SUGGESTIONS=true
OPENAI_API_STREAM_STATUS_UPDATES=true
OPENAI_API_STREAM_PROGRESS_EVENTS=true
OPENAI_API_STREAM_PROGRESS_FORMAT=json_pretty
OPENAI_API_STREAM_CHUNK_SIZE=160
OPENAI_API_SIMULATED_STREAM_DELAY_MS=12

OPENAI_API_PRELOAD_MODELS=true
OPENAI_API_PRELOAD_TIMEOUT_SECONDS=40

OPENAI_API_SUGGESTIONS_IN_CONTENT=false
OPENAI_API_SUGGESTION_ACTIONS_IN_CONTENT=false

# General chat fast-path
GENERAL_FASTPATH_ENABLED=false

# ============================================================================
# Open WebUI Configuration
# ============================================================================

# Auth
WEBUI_AUTH=False
ENABLE_SIGNUP=False

# UI Features
ENABLE_IMAGE_GENERATION=False
ENABLE_MODELS_FILTER=True
SHOW_ADMIN_DETAILS=False

# Logging
LOG_LEVEL=INFO
DO_NOT_TRACK=True

# ============================================================================
# Python Configuration
# ============================================================================

PYTHONPATH=/app
